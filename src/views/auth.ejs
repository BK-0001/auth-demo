<h1><%= title %> page</h1>

<form action="/auth/<%= title.toLowerCase() %>" method="post">
  <label for="email">Email</label>
  <input
    type="email"
    id="email"
    name="email"
    placeholder="email@example.com"
    value="<%= email %>"
    required
  />

  <label for="password">Password</label>
  <input
    type="password"
    id="password"
    name="password"
    value="<%= password %>"
    required
  />

  <button type="submit"><%= title %></button>
</form>

<% if (error) { %>
<p style="color: red"><%= error %></p>
<% } %>
